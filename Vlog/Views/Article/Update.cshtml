
@using Vlog.Models
@{
    ViewBag.Title = "Update";
    Article article = ViewBag.Article;

}
<h2>Update</h2>

<form role="form" method="post" action="UpdateSubmit">
    <input type="hidden" value="@article.ArticleId" name="articleId">
    <div class="form-group">
        <label for="exampleInputEmail1">Title</label>
        <input type="text" class="form-control" id="exampleInputEmail1" value="@article.Title" name="title">
    </div>
    <div class="form-group">
        <label>Content</label>
        <textarea class="form-control" rows="3" name="content">@article.Content</textarea>
    </div>
        <button type="submit" class="btn btn-default">Submit</button>
</form>


