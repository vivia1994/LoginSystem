@using Vlog.Models
@{
    ViewBag.Title = "User";
    List<Article>  articles = ViewBag.Articles;
}

<h2>User</h2>

<h2><a href="Insert">Create blog</a></h2>

@if (articles.Count == 0)
{
    <p>No article!</p>
}
else
{
    foreach (Article item in articles)
    {
        <h3><a href="Detail?articleId=@item.ArticleId">@item.Title</a></h3>        
        <p><a href="Update?articleId=@item.ArticleId">Update</a></p>
        <span>@item.User.Name</span>
        <span>@item.Time.ToShortDateString()</span>
    }
}

